{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "outDir": "dest",

    "noImplicitAny": true,
    "allowUnreachableCode": false,
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
